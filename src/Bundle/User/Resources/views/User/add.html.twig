{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Ajout utilisateur {% endblock %}

{% set menu_user        = true %}
{% set menu_user_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    <div class="card shadow mb-4 col-md-8 col-xs-12 mx-auto">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Créer un utilisateur</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.usrLastname, {'attr': {'class': 'col-10'}}) }}
                    {{ form_row(form.usrFirstname, {'attr': {'class': 'col-10'}}) }}
                    {{ form_row(form.usrAddress, {'attr': {'class': 'col-10'}}) }}
                    {{ form_row(form.email, {'attr': {'class': 'col-8'}}) }}
                    {{ form_row(form.usrPhone, {'attr': {'class': 'col-6'}}) }}
                </div>
                <div class="col-md-6">
                    {% if is_granted('ROLE_SUPERADMIN') %}
                        <div class="form-group">
                            <label for="">Nom de l'établissement</label>
                            <input type="text" name="etsNom" class="form-control">
                        </div>
                    {% endif %}

                        <div class="hide" {% if is_granted('ROLE_SUPERADMIN') %} style="display: none"{% endif %}>
                            {{ form_row(form.imgUrl) }}
                        </div>

                    {{ form_row(form.skRole, {'attr': {'class': 'col-4'}}) }}
                    <div class="hide" style="display: none;">
                        {{ form_row(form.enabled) }}
                    </div>
                    {{ form_row(form.username, {'attr': {'class': 'col-6'}}) }}
                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'col-6'}}) }}
                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'col-6'}}) }}
                </div>
            </div>

            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-right" value="Enregistrer" name="new_user"/>
                {% if not is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('user_index') }}"
                       class="btn btn-google">
                        Annuler
                    </a>
                {% endif %}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}