{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Modifications notes {% endblock %}

{% set menu_note        = true %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Modification de note</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="text" class="form-control" disabled value="{{ note.etudiant.etudiant.usrLastname }}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="noteVal" value="{{ note.noteVal }}">
                    </div>
                    <div class="form-group">
                        <select name="matiere" id="" class="form-control">
                            <option value="{{ note.matNom.id }}">{{ note.matNom.matNom }}</option>
                            {% for matiere in matiere %}
                                <option value="{{ matiere.id }}">{{ matiere.matNom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Selectionner le trimestre</label>
                        <select name="trimestre" class="form-control">
                            <option value="{{ note.trimestre.id }}">{{ note.trimestre.name }}</option>
                            {% for trim in trimestre %}
                                <option value="{{ trim.id }}">{{ trim.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary btn-block" value="Enregistrer" name="new_niveau"/>
                <a href="{{ path('niveau_index') }}"
                   class="btn btn-google btn-block">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}