{% extends 'admin/admin.html.twig' %}

{% block title %}{{ parent() }} | Tableau de bord {% endblock %}

{% set menu_info = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    <div class="row">
        <form action="" method="POST" class="form-search">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary text-center">Liste des bugs</h6>
                    Bouton création
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN') %}
                        <div class="add-btn-top-list float-right">
                            <a href="{{ path('bug_new') }}" class="btn btn-primary">
                                Signaler un bug ou amélioration(s)
                            </a>
                        </div>
                    {% endif %}
                </div>
                <div class="card-body table-responsive">
                    {% for bug in bug %}
                        <h4>{{ bug.titre }}</h4>
                        <table class="table">
                            <tr>
                                <td style="width: 200px">{{ bug.description }}</td>
                                <td style="width: 200px">{{ bug.dateAjout|date('Y-m-d H:m') }}</td>
                                {% if is_granted('ROLE_SUPERADMIN') %}
                                    <td style="width: 200px">{{ bug.user.usrLastname }}</td>
                                {% endif %}
                                <td class="status" style="color: {{ bug.color }};width: 100px">{{ bug.status }}</td>
                                {% if bug.attachment %}
                                    <td style="width:100px" class="img-fluid">
                                        <a href="{{ asset('uploads/images/bug/'~ bug.attachment) }}"
                                           data-toggle="lightbox">
                                            <img src="{{ asset('uploads/images/bug/'~ bug.attachment) }}"
                                                 class="img-fluid">
                                        </a>
                                    </td>
                                {% endif %}
                                {% if is_granted('ROLE_SUPERADMIN') %}
                                    <td style="width: 200px">
                                        <a href="{{ path('bug_edit',{"id":bug.id}) }}"
                                           class="btn btn-circle btn-primary"><i class="fa fa-edit"></i></a>
                                        <a href="{{ path('bug_delete',{"id":bug.id}) }}"
                                           class="btn btn-circle btn-warning"><i
                                                    class="fa fa-trash"></i></a>
                                    </td>
                                {% endif %}
                            </tr>
                        </table>
                    {% endfor %}
                </div>
            </div>
        </form>
    </div>
    <div class="container-fluid gedf-wrapper">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <div class="h5">@LeeCross</div>
                        <div class="h7 text-muted">Fullname : Miracles Lee Cross</div>
                        <div class="h7">Developer of web applications, JavaScript, PHP, Java, Python, Ruby, Java,
                            Node.js,
                            etc.
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Followers</div>
                            <div class="h5">5.2342</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">6758</div>
                        </li>
                        <li class="list-group-item">Vestibulum at eros</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 gedf-main">

                <!--- \\\\\\\Post-->
                <div class="card gedf-card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active btn-primary" id="posts-tab" data-toggle="tab"
                                   aria-controls="posts" aria-selected="true">
                                    Ajouter un bug ou amélioration
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div id="post-content"></div>
                </div>
                <!-- Post /////-->

                <!--- \\\\\\\Post-->
                {% for bug in bug %}
                    <div class="card gedf-card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="mr-2">
                                        <img class="rounded-circle" width="45"
                                             src="{{ bug.user.imgUrl ? bug.user.imgUrl : 'https://www.techzara.org/front_site_office/images/techzara/icon.jpg' }}"
                                             alt="">
                                    </div>
                                    <div class="ml-2">
                                        <div class="h5 m-0">@{{ bug.user.usrLastname }}</div>
                                        <div class="h7 text-muted">{{ bug.user.etsNom }}</div>
                                    </div>
                                </div>
                                {% if is_granted('ROLE_SUPERADMIN') %}
                                    <div>
                                        <div class="dropdown">
                                            <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-h"></i>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                                <div class="h6 dropdown-header">Action</div>
                                                <a class="dropdown-item" href="{{ path('bug_delete',{"id":bug.id}) }}">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="text-muted h7 mb-2"><i class="fa fa-clock-o"></i>{{ dateAdd }}</div>
                            <a class="card-link" href="#">
                                <h5 class="card-title">{{ bug.titre }}.</h5>
                            </a>
                            <p class="card-text">
                                {{ bug.description }}.
                            </p>
                        </div>
                        <div class="card-footer">
                            <a onclick="addComment('{{ bug.id }}')" class="card-link"><i class="fa fa-comment"></i>
                                Comment</a>
                            <div id="comment-content{{ bug.id }}"></div>
                            <p class="card-text">
                                {% for comment in bug.comment %}
                                    <li>{{ comment.comment }}</li>
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                {% endfor %}
                <!-- Post /////-->


            </div>
            <div class="col-md-3">
                <div class="card gedf-card">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's content.</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
                <div class="card gedf-card">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the
                            card's content.</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('#posts-tab').on('click', function () {
            $.ajax({
                url: '{{ path('bug_new') }}',
                type: 'POST',
                success: function (data) {
                    $('#post-content').html(data);
                },
                fail: function () {
                    alert("une erreur se produite");
                }
            })
        });

        function addComment(id) {
            var url = '{{ path('bug_comment',{"id":"id"}) }}';
            url = url.replace("id", id);

            $.ajax({
                url: url,
                success: function (data) {
                    $('#comment-content' + id).html(data);
                    $(document).on('click', '#comment', function () {
                        var data = $('#form-comment').serializeArray();
                        $.ajax({
                            type: 'POST',
                            url: url,
                            data: data,
                            dataType: "json"
                        }).done(function (data) {
                            console.log(data)
                        }).fail(function (err) {
                            console.log(err)
                        })
                    });
                },
                fail: function () {
                    alert("une erreur se produite");
                }
            })
        }
    </script>
{% endblock %}