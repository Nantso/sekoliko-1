

{% form_theme form 'form/custom_fields.html.twig' %}

{{ form_start(form,{"attr":{"id":"formClasse"}}) }}
<div class="row">
    <div class="col-md-12">

        <div class="form-group ">
            <label for="">Selectionner le niveau</label>
            <select name="niveau" id="" class="form-control">
                {% for niveau in niveau  %}
                    <option value="{{ niveau.id }}" >{{ niveau.niveauNom }}</option>
                {% endfor %}
            </select>
        </div>
        {{ form_row(form.classeNom) }}
    </div>
</div>
<div class="box-footer">
    <input type="submit" class="btn btn-primary float-right" id="addClasse" value="Enregistrer" name="new_classe"/>
    <a data-dismiss="modal"
       class="btn btn-google">
        Annuler
    </a>
</div>
{{ form_end(form) }}